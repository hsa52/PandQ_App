<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".startthegame"
    android:background="@color/black">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:text=""
        android:id="@+id/turn"
        android:gravity="start"
        android:padding="10dp"
        android:textSize="13sp"
        android:textColor="@color/green"
        />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="top|center"
        android:clickable="true"
        android:padding="10dp"
        android:id="@+id/mainBoard"
        android:nestedScrollingEnabled="false"
        >

        <TableRow
            style="@style/TableRow"
            android:id="@+id/row0"
            android:layout_height="match_parent">
            <TextView
                android:layout_column="0"
                style="@style/LeftCell"
                android:background="@color/aqua"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_width="match_parent">

            </TextView>

            <TextView
                android:layout_column="1"
                style="@style/MiddleCell"
                android:background="@color/aqua"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_width="match_parent">

            </TextView>

            <TextView
                android:layout_column="2"
                style="@style/RightCell"
                android:background="@color/aqua"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_width="match_parent">

            </TextView>

        </TableRow>
        <TableRow
            style="@style/TableRow"
            android:id="@+id/row1"
            >
            <TextView
                android:layout_column="0"
                style="@style/LeftCell"
                android:background="@color/aqua"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_width="match_parent">

            </TextView>
            <TextView
                android:layout_column="1"
                style="@style/MiddleCell"
                android:background="@color/aqua"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_width="match_parent">

            </TextView>
            <TextView
                android:layout_column="2"
                style="@style/RightCell"
                android:background="@color/aqua"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_width="match_parent">

            </TextView>

        </TableRow>
        <TableRow
            style="@style/TableRow"
            android:id="@+id/row2"
            >
            <TextView
                android:layout_column="0"
                style="@style/LeftCell"
                android:background="@color/aqua"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_width="match_parent">

            </TextView>

            <TextView
                android:layout_column="1"
                style="@style/MiddleCell"
                android:background="@color/aqua"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_width="match_parent">

            </TextView>

            <TextView
                android:layout_column="2"
                style="@style/RightCell"
                android:background="@color/aqua"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_width="match_parent">

            </TextView>

        </TableRow>

    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:text="Home"
            android:layout_width="wrap_content"
            android:id="@+id/returntohomepage"
            android:onClick="returnbuttonclicked" />

        <Button
            android:layout_height="wrap_content"
            android:text="Start Over"
            android:id="@+id/reset" />
    </TableRow>

</LinearLayout>
